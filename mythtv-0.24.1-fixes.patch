+    def decorated(*args, **kwargs):
+        return_hack = []
+        event = threading.Event()
+        def runThenSet():
+            try:
+                return_hack.append(func(*args, **kwargs))
+            finally:
+                event.set()
+        eventloop.add_urgent_call(runThenSet, 'run in event loop')
+        event.wait()
+        if return_hack:
+            return return_hack[0]
+    decorated.__doc__ = func.__doc__
+    return decorated
