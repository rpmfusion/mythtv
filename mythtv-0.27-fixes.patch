+     * #EXT-X-TARGETDURATION:<s>
+     *
+     * where s is an integer indicating the target duration in seconds.
+     */
+    int duration = -1;
+
+    if (!ParseDecimalValue(line, duration))
+    {
+        LOG(VB_RECORD, LOG_ERR, loc + "expected #EXT-X-TARGETDURATION:<s>");
