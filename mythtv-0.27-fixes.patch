+        newhandler->Start();
+        s_handlers[devkey] = newhandler;
+        s_handlers_refcnt[devkey] = 1;
+
+        LOG(VB_RECORD, LOG_INFO,
+            QString("HTTPTSSH: Creating new stream handler %1 for %2")
+            .arg(devkey).arg(tuning.GetDeviceName()));
+    }
+    else
