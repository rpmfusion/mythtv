/var/log/mythtv/mythbackend.log /var/log/mythtv/myth*.*.*.log {
    notifempty
    missingok
    compress
    compresscmd /usr/bin/bzip2
    uncompresscmd /usr/bin/bunzip2
    compressext .bz2
    weekly
    rotate 4
    size 10M
    postrotate
         /bin/systemctl kill mythbackend.service --signal=HUP --kill-who=main 2>/dev/null || true
    endscript
}
