+            self.country = data.get('country')
+        else:
+            self.country = {}
+            self.country['name'] = 'Original Country'
+            self.country['code'] = 'OG'
+            self.country['timezome'] = 'Original Country Timezone'
+
+    def __str__(self):
+        return self.country.get('name') + ': ' + self.name
